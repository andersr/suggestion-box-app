  </tr>

<% @suggestions.each do |suggestion| %>
  <tr>
    <td><%= suggestion.suggestion_message %></td>
    <td><%= link_to 'Show', suggestion_message %></td>
    <td><%= link_to 'Edit', edit_suggestion_message(suggestion) %></td>
    <td><%= link_to 'Destroy', suggestion_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>

<% end %>
</table>

